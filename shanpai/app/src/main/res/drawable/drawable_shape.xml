<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
   <!-- radius优先级比较低，会被其他属性覆盖 -->
    <corners
        android:radius="6dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"/>
    <!-- gradient它与solid是互相排斥的，
    angle渐变的角度，默认为0，其值必须是45的倍数 0表示从左到右，90表示从上到下
    gradientRadius 渐变半径，仅当android:type="radial"时有效
    useLevel 一般为false 当Drawable作为StateListDrawable使用时为true
    type linear线性渐变 radial径向渐变 sweep扫面渐变
     -->
    <gradient
        android:angle="0"
        android:centerX="0"
        android:centerY="0"
        android:startColor="#D4FFFF"
        android:centerColor="#98D5EC"
        android:endColor="#4C6A76"
        android:type="linear"/>
    <!-- stroke Shape的描边 dashWidth虚线的长度 dashGap虚线的距离 -->
    <stroke
        android:width="3dp"
        android:color="@color/colorAccent"
        android:dashWidth="10dp"
        android:dashGap="4dp"/>
    <!-- 包含它的View的空白 -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>
    <!-- shape固有大小，并不是显示大小，作为某个view的背景会被拉升和缩放 -->
    <size
        android:width="10dp"
        android:height="10dp"/>

</shape>